{
	"extends": "@repo/typescript-config/nextjs.json",
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["./src/*"],
			"@repo/ui/*": ["../../packages/ui/src/*"]
		},
		"plugins": [
			{
				"name": "next"
			}
		],
		"declaration": false,
		"declarationMap": false
	},
	"include": [
		"next-env.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"types.d.ts",
		".next/types/**/*.ts"
	],
	"exclude": ["node_modules"]
}
