{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
      "plugins": [
        {
          "name": "next"
        },
      ],
      "paths": {
        "@/*": ["./*"],
        "@repo/ui/*": ["../../packages/ui/src/*"]
        
      },
      "declaration": false,
      "declarationMap": false
    },
    "include": [
      "next-env.d.ts",
      "next.config.js",
      "**/*.ts",
      "**/*.tsx",
      "**/*.json",
      ".next/types/**/*.ts",
      "lib/types/*.d.ts"
    ],
    "exclude": ["node_modules"]

  }
  